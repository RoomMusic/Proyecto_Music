<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/music_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/imageSong"
                android:src="@drawable/ic_action_music"
                app:civ_border_width="2dp"
                 />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageSong">

                <TextView
                    android:id="@+id/nameSong"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Nombre Cancion"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/nameGenere"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/nameSong"
                    android:layout_toRightOf="@id/nameArtist"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="G"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="10sp"
                    android:typeface="monospace"

                    />

                <TextView
                    android:id="@+id/nameArtist"
                    android:layout_width="260dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/nameSong"
                    android:text="Artista"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:fontFamily="sans-serif-light"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
