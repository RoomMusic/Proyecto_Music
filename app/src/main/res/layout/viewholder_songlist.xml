<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="53dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:civ_border_color="#000000"
                android:layout_centerVertical="true"
                android:id="@+id/imageSong"
                android:src="@drawable/ic_action_music"
                app:civ_border_width="2dp"/>

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imageSong">

                <TextView
                    android:id="@+id/nameSong"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/snow"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Nombre Cancion"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    android:visibility="visible" />

                <TextView

                    android:id="@+id/nameGenere"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/nameSong"
                    android:layout_toRightOf="@id/nameArtist"
                    android:background="@color/snow"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="G"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/nameArtist"
                    android:layout_width="210dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/nameSong"
                    android:background="@color/snow"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="Artista"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="12sp"
                    android:typeface="monospace" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
