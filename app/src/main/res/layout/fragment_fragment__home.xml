<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment_Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">


        <android.support.v7.widget.CardView
            android:id="@+id/profileinfo"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageprof"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    android:elevation="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageprof"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="25dp"
                    android:text="Lionel Messi"
                    android:textSize="25dp"
                    android:textStyle="bold"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/musicinfo"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_below="@id/profileinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtsong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canción del día"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgsong"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_action_music"
                    android:elevation="2dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/oval"/>

                <TextView
                    android:id="@+id/idsong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgsong"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="15dp"
                    android:text="Tu no metes cabra"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imgsong"
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/idsong"
                    android:layout_marginLeft="15dp"
                    android:text="Bad Bunny - Daddy Yankee"
                    android:textSize="14dp"
                    android:textStyle="bold"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/shareinfo"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_below="@id/musicinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="15dp">


        </android.support.v7.widget.CardView>








    </RelativeLayout>

</FrameLayout>
