<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">


        <android.support.v7.widget.CardView
            android:id="@+id/profileinfo"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageprof"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:elevation="2dp" />


                <TextView
                    android:id="@+id/username"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/imageprof"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/musicinfo"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_below="@id/profileinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="159dp">

                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtsong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="@string/cancionDia"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgsong"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/linear_layout"
                    android:src="@drawable/ic_action_music"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/random_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="65dp"
                    android:layout_toRightOf="@id/imgsong"
                    android:text="Tu no metes cabra"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/artist_random_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/random_song_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/imgsong"
                    android:text="Bad Bunny - Daddy Yankee"
                    android:textSize="14dp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/shareinfo"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_below="@id/musicinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
