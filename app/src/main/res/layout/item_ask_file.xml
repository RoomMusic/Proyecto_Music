<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/relateive_song_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/song_image_ask"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_view_song_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="10dp"
                android:text="song name"
                android:layout_toRightOf="@+id/song_image_ask" />


            <TextView
                android:layout_below="@+id/text_view_song_name"
                android:layout_toRightOf="@+id/song_image_ask"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textStyle="bold"
                android:text="Quiere enviar Azukita a Stucom?"
                android:layout_margin="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/relateive_song_details"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <Button
                android:id="@+id/btn_yes"
                android:text="yes"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_toRightOf="@+id/btn_yes"
                android:id="@+id/btn_no"
                android:text="No"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>