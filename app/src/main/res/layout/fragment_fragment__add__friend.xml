<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.social.chat.Fragment_Add_Friend">

    <RelativeLayout
        android:id="@+id/relative_search_user"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <EditText
            android:id="@+id/username_et"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/username_et"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_show_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_search_user"
        android:layout_margin="15dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_add_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>