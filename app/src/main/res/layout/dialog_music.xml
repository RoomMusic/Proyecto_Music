<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Name Song"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:id="@+id/dialog_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Name Artists"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/dialog_btndelete"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:padding="20dp"
            android:drawableLeft="@drawable/dialog_delete_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="ELIMINAR"
            android:layout_marginTop="5dp"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_btnplay"
            android:drawableLeft="@drawable/dialog_play_arrow"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Reproduicr"
            android:layout_gravity="start" />
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_action_music"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>


</RelativeLayout>